<div class="back_login" style="bottom: 0px">
<%= image_tag 'cardbackground.jpg' %>
</div>
<div class="container" style="width: 100%; margin-top: 50px">
<div class="col-sm-12 col-md-6">
<h1>Edit the company</h1>
</div>
<div class="col-sm-12 col-md-6">
<div class="formm">
<%= simple_form_for @company, url: cview_company_path(@company) do |f| %>
  <%= f.input :name, required: false %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :country %>
  <%= f.input :phone_number %>
  <%= f.input :email %>
  <%= f.input :website %>
  <%= f.input :photos, as: :attachinary %>
  <%= f.simple_fields_for :users, current_user do |u| %>
    <%= u.input :first_name %>
    <%= u.input :last_name %>
    <%= u.input :grade_company %>
  <% end %>
<br>
  <center><%= f.button :submit %></center>
<% end %>
</div>
</div>
