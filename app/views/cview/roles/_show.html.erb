<div class="role" data-role-id="<%= role.id %>" style="display: none;">

    <div class="avatar-large">
      <%= render 'unknown' %>
    </div>
    <div class="role-name">
      <h3><%= role.name %></h3>
      <p>Hours : <%= role.hours.to_i %> <br>
      Salary : <%= role.income %> â‚¬ </p>
    </div>
    <div class="role-body">
      <p><strong>Starts on <%= role.date_start %> | Ends on <%= role.date_end %></strong></p>
      <p>
        <%= role.description %>
      </p>
      <p> <strong> Specificities : </strong>
        <% if role.gender && role.gender != "" %>
          Gender : <%= role.gender %> |
        <% end %>
        <% if role.ethnicity && role.ethnicity != "" %>
          Ethnicity : <%= role.ethnicity %> |
        <% end %>
        <% if role.hair_color && role.hair_color != "" %>
          Hair color : <%= role.hair_color %> |
        <% end %>
        <% if role.haircut && role.haircut != "" %>
          Haircut : <%= role.haircut %> |
        <% end %>
        <% if role.height && role.height!= ""  %>
          Height : <%= role.height %> |
        <% end %>
        <% if role.corpulence && role.corpulence != ""  %>
          Body type : <%= role.corpulence %>
        <% end %>
      </p>
    </div>
    <div class="role-status">
      <%= link_to 'Browse models', edit_cview_project_role_path(project_id: @project.id, id: role.id), class: "role-controls"%> <br>
      <%= link_to 'Edit role', cview_project_role_path(project_id: @project.id, id: role.id), class: "role-controls"%>
    </div>

</div>



