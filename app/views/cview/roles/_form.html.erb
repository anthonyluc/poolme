<%= f.input :name, required: false %>
<%= f.input :description, required: false %>

<%= f.input :date_start, required: false %>
<%= f.input :date_end, required: false %>
<%= f.input :income, required: false %>
<%= f.input :hours, required: false %>

<%= f.input :gender, :item_wrapper_class => 'radio-inline', :collection => ["male", "female", "other"], :as => :radio_buttons %>
<%= f.input :ethnicity, :item_wrapper_class => 'radio-inline', :collection => ["european", "african", "asian", "other"], :as => :radio_buttons %>
<%= f.input :hair_color, :item_wrapper_class => 'radio-inline', :collection => ["black", "brown", "blond", "red", "grey", "white", "other"], :as => :radio_buttons %>
<%= f.input :haircut, :item_wrapper_class => 'radio-inline', :collection => ["bald", "short", "mid-length", "long"], :as => :radio_buttons %>
<%= f.input :height %>
<%= f.input :corpulence, :item_wrapper_class => 'radio-inline', :collection => ["light-weight", "regular", "heavy-weight", "athletic"], :as => :radio_buttons %>
<br>
<center><%= f.button :submit %></center>
