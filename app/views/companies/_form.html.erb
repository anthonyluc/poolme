<%= simple_form_for current_user, url: companies_path, method: :post do |u| %>
  <%= u.input :first_name %>
  <%= u.input :last_name %>
  <%= u.input :grade_company %>
  <%= u.input :phone_number_pro %>
  <%= u.input :email_pro, label: 'Email pro' %>
  <%= u.simple_fields_for :companies, @company do |c| %>
    <%= c.input :name, label: 'Society' %>
    <%= c.input :country %>
    <%= c.input :photos, as: :attachinary, label: 'Maximum 5, logo first' %>
  <% end %>
  <br>
  <%= u.button :submit %>
<% end %>
