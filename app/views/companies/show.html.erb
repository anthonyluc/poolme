<h2>The Dam</h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-lg-2">
      <%= @company.name %>
    </div>
    <div class="col-12 col-md-auto">
      <%= @company.address %>
    </div>
    <div class="col col-lg-2">
      <%= @company.country %>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col col-lg-2">
      <%= @company.email %>
    </div>
    <div class="col-12 col-md-auto">
      <%= @company.phone_number %>
    </div>
    <div class="col col-lg-2">
      <%= @company.website %>
    </div>
  </div>
  <div class="photos">
    <%= cl_image_tag @company.photos %>
  </div>
  <h2>The Castors</h2>
  <%= @company.legal_representatives do |castor| %>
  <div class="row justify-content-md-center">
    <div class="col col-lg-2">
      <%= castor.first_name %>
    </div>
    <div class="col-12 col-md-auto">
      <%= castor.last_name %>
    </div>
    <div class="col col-lg-2">
      <%= castor.grade %>
    </div>
      <% end %>
  </div>
</div>
