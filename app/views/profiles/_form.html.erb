<%= f.input :first_name %>
<%= f.input :last_name %>
<%= f.input :phone_number %>
<%= f.input :email %>
<%= f.input :description %>
<%= f.input :city %>
<%= f.input :country %>
<div class="flex">
<%= f.input :gender, :collection => ["male", "female", "other"], :as => :radio_buttons  %>
</div>
<div class="flex">
<%= f.input :hair_color, :collection => ["black", "brown", "blond", "red", "grey", "white", "other"], :as => :radio_buttons  %>
</div>
<div class="flex">
<%= f.input :haircut, :collection => ["bald", "short", "mid-length", "long"], :as => :radio_buttons  %>
</div>
<div class="flex">
<%= f.input :ethnicity, :collection => ["european", "african", "asian", "other"], :as => :radio_buttons  %>
</div>
<%= f.input :height %>
<div class="flex">
<%= f.input :corpulence, :collection => ["light-weight", "regular", "heavy-weight", "athletic"], :as => :radio_buttons  %>
</div>
<br>
<%= f.input :photos, as: :attachinary %>
<br>
<%= f.input :newsletter %>
<%= f.input :model, label: "Disponible" %>
<br>
<%= f.button :submit, "Update profile" %>
