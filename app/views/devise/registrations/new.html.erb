<div class="back_login">
<%= image_tag 'poster.png' %>
</div>
<div class="container" style="width: 500px">
<h2><center>Sign up</center></h2>
<br>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/devise_errors' %>

  <div class="form-inputs", style='font-family: "Raleway";'>
    <%= f.input :username, required: false, autofocus: true %>
    <%= f.input :email, required: false %>
    <%= f.input :password, required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: false %>
  </div>
  <br></br>
  <div class="form-actions" style="text-align: center">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
<br><br></br>
<center>
<%= render "devise/shared/links" %>
</center>
<br></br>
</div>
